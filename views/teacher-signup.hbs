<div class="row col-sm-12" align="center">
  <a href="/">Home</a>
</div>


<form class="" action="/signup/teacher" method="post">
  <input hidden type="text" name="id" value="{{teacher.id}}">
  <div class="row col-md-12" align="center">
    <label for="">Username:</label>
    <input type="text" name="uname" value="" placeholder="">
  </div>
  <div class="row col-md-12" align="center">
    <label for="">Password:</label>
    <input type="password" name="pword" value="" placeholder="">
  </div>
  <div class="row col-md-12" align="center">
    <label for="">First Name:</label>
    <input type="text" name="fname" value="" placeholder="">
  </div>
  <div class="row col-md-12" align="center">
    <label for="">Last Name:</label>
    <input type="text" name="lname" value="" placeholder="">
  </div>
  <div class="row col-md-12" align="center">
    <label for="">Email:</label>
    <input type="text" name="email" value="" placeholder="">
  </div>
  <div class="col-md-12" align="center">
    <button type="submit" name="button">Submit</button>
  </div>


</form>

