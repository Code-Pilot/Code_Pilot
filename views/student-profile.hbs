
<h2>Welcome, {{student.uname}}!</h2>

<p>{{student.bio}}</p>


<a href="/profile/student/{{student.uname}}/edit">Edit Profile</a>


<hr>

<div class="container">
  <div class="row" id="userFormArea">
    <div class="col-md-12">
      <form class="" id="userForm">
        <div class="form-group">
          <input style="display:none"type="text" name="userType" value="student">
          <input class="form-control" id="username" style="display:none" value="<em>{{student.userType}}</em> - <strong>{{student.uname}}</strong>">
          <br/>
          <input type="submit" class="enterChat btn btn-primary" value="Enter Chat">
        </div>
      </form>

    </div>
  </div>


  <div id="messageArea" class="row hide">
    <div class="col-md-4">
      <div class="well">
        <h3>Online Users</h3>
        <ul class="list-group" id="users"></ul>
      </div>
    </div>
    <div class="col-md-8">
      <div class="chat" id="chat"></div>
      <form class="" id="messageForm" action="index.html" method="post">
        <div class="form-group">
          <label for="">Enter Message</label>
          <textarea class="form-control" id="message" name="name" rows="8" cols="80"></textarea>
          <br />
          <input type="submit" name="" class="btn btn-primary" value="Send Message">
          <a href="/profile/student/{{student.uname}}"><div class="btn btn-warning">Exit Chat</div></a>
        </div>
      </form>
    </div>
  </div>
</div>
