<section class="container">
  <div class="row">
    <div class="col-sm-12" align="center">
        <img src="/images/code-pilot.png"></img>
    </div>
  </div>

 <div class="row">
    <div class="login-signup col-sm-12" align="center">
      <button class="signup-modal-button btn btn-primary" type="button" name="button">Sign Up</button>
      <button class="login-modal-button btn btn-primary" type="button" name="button">Login</button>
    </div>
  </div>

  <div class="row col-sm-12" align="center">

 <div class="row">
    <div class="signup-modal-div hide" class="login-signup col-sm-12" align="center">

      <a href="/teacher-signup"><button class="btn btn-primary" name="button">Are you signing up as a Teacher?</button></a>
      <a href="/student-signup"><button class="btn btn-primary" name="button">Are you signing up as a Student?</button></a>

   </div>

   <div class="login-modal-div hide" class="login-signup col-sm-12" align="center">

    <a href="/teacher-login"><button class="btn btn-primary" name="button">Are you logging in as a Teacher?</button></a>
    <a href="/student-login"><button class="btn btn-primary" name="button">Are you logging in as a Student?</button></a>

  </div>

  <div class="slider-container">
    <h1 id="slider_text" class="sliderText_content">{{title}}</h1>
    <p class="sliderText_content subtitle">{{subtitle}}</p>
  </div>


 </div>

</div>

</section>
